{
  "name": "api",
  "version": "1.0.0",
  "description": "meli challenge api",
  "main": "index.js",
  "scripts": {
    "start": "env-cmd -f ./envs/.env.dev node index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "cd .. & husky install ./api",
    "format": "prettier --write .",
    "build": "env-cmd -f ./envs/env.prod tsc",
    "build:dev": "env-cmd -f ./envs/env.dev tsc -w",
    "prepare-env": "cp ./envs/template.env envs/.env.dev && cp ./envs/template.env ./envs/.env.prod"
  },
  "keywords": [
    "api",
    "express",
    "meli",
    "challenge"
  ],
  "author": "jafidiesel",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "env-cmd": "^10.1.0",
    "express": "^4.19.2",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "eslint": "^9.1.1",
    "husky": "^9.0.11",
    "prettier": "^3.2.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    },
    "lint-staged": {
      "*.js": [
        "eslint — fix",
        "prettier — write",
        "git add"
      ]
    }
  }
}
